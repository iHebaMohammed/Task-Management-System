@model TaskDto


@{
    ViewData["Title"] = "Update";
}

<h1>Update Task</h1>
<br />
<br />
<form method="post" asp-action="Update" enctype="multipart/form-data">
    <input asp-for="Id" hidden /> 
    <div class="form-group">
        <label class="col-form-label" asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DueDate"></label>
        <input class="form-control" asp-for="DueDate" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" asp-items="ViewBag.TaskStatusList" class="form-control">
            <option value="">Select Status</option>
        </select>
    </div>

    <br />
    <br />

    <input type="submit" value="Submit" class="btn btn-primary" /> |
    <a class="btn btn-light" asp-action="Index">Back To List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

